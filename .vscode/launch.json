{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Service: FastAPI (uvicorn)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app.main:app",
        "--host", "0.0.0.0",
        "--port", "8000",
        "--reload"
      ],
    },
    {
      "name": "Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["-v", "app/tests"],
      "console": "integratedTerminal",
      "justMyCode": false
    }
  ]
}
